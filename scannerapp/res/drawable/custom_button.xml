<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/color1g2"
                android:endColor="@color/color1g1"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/color1g1"
                android:startColor="@color/color1g2"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/color1g1"
                android:startColor="@color/color1g2"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
